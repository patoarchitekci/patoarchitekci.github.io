{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ .Site.Title }} - Newsletter MailerLite</title>
    <link>{{ .Permalink }}</link>
    <description>Ostatni odcinek podcastu Patoarchitekci z newsletterem</description>
    <language>{{ .Site.LanguageCode }}</language>
    {{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{ end }}
    <atom:link href="{{ .Permalink }}" rel="self" type="application/rss+xml" />
    {{- $pages := where .Site.RegularPages "Type" "episodes" }}
    {{- $pages = first 1 $pages }}
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      <guid>{{ .Permalink }}</guid>
      <description>{{ with .Params.description }}{{ . | plainify | htmlUnescape }}{{ end }}</description>
      <content:encoded>
        <![CDATA[
        {{- with .Params.og_landscape -}}
        <img src="{{ $.Site.BaseURL | strings.TrimSuffix "/" }}{{ . }}" alt="{{ $.Title }}" decoding="async" title="{{ $.Title }}">
        {{- end -}}
        {{- with .Params.newsletter -}}
        {{ . | $.Page.RenderString }}
        {{- end -}}
        ]]>
      </content:encoded>
    </item>
    {{- end }}
  </channel>
</rss>
